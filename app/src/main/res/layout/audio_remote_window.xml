<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
											 xmlns:app="http://schemas.android.com/apk/res-auto"
											 android:layout_width="match_parent"
											 android:layout_height="match_parent"
											 android:background="@color/half_transparent">

	<ImageView
		android:layout_width="87dp"
		android:layout_height="87dp"
		android:layout_marginBottom="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/st_bg_def_avatar"/>

	<android.support.constraint.ConstraintLayout
		android:id="@+id/video_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
	</android.support.constraint.ConstraintLayout>

	<TextView
		android:id="@+id/id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:text="ID"
		android:textColor="#FFFFFF"
		android:textSize="12sp"
		android:visibility="invisible"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/audiorate"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="A-25K/S"
		android:textColor="#FFFFFF"
		android:textSize="12sp"
		android:visibility="invisible"
		app:layout_constraintBottom_toTopOf="@+id/videorate"
		app:layout_constraintStart_toStartOf="@+id/videorate"/>

	<TextView
		android:id="@+id/videorate"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:text="V-25K/S"
		android:textColor="#FFFFFF"
		android:textSize="12sp"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"/>

	<ImageView
		android:id="@+id/remote_btn_switch_camera"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:src="@drawable/mainly_btn_camera_selector"
		android:visibility="invisible"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<ImageView
		android:id="@+id/speakimage"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:visibility="invisible"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:src="@drawable/st_ic_microphone_volume_normal"/>
</android.support.constraint.ConstraintLayout>